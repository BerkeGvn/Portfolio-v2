<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css"
/>

<section
  class="skills-wrapper flex justify-center px-4 py-8 sm:px-8"
  id="skills"
  data-animate="section"
>
  <div
    class="skills-panel relative isolate flex w-full max-w-6xl flex-col overflow-hidden rounded-[36px] bg-(--surface-base) text-(--ink-body) shadow-(--shadow-elevated)"
    data-animate-target
  >
    <div
      class="skills-pattern"
      aria-hidden="true"
    >
    </div>
    <div
      class="skills-highlight"
      aria-hidden="true"
    >
    </div>

    <div class="flex flex-col justify-center p-8 sm:p-12 xl:p-16">
      <div class="skills-content space-y-6 lg:space-y-7">
        <span
          class="inline-flex w-fit items-center gap-2 rounded-full border border-(--brand-primary-outline) bg-(--brand-primary-soft) px-4 py-1.5 text-sm font-semibold tracking-wide text-(--brand-primary-dark)"
        >
          <span class="inline-block h-2 w-2 rounded-full bg-(--brand-primary)"></span>
          スキル
        </span>

        <h2
          class="text-3xl font-semibold leading-[1.08] tracking-tight text-(--ink-strong) sm:text-4xl lg:text-[2.75rem]"
        >
          <span class="text-(--brand-primary-strong)">使用技術</span>
        </h2>

        <div class="skills-categories pt-6">
          <section
            class="skills-category-card"
            data-animate-child
          >
            <h3 class="skills-category-title">フロントエンド</h3>
            <ul class="skills-category-grid">
              <li class="skills-card">
                <i class="devicon-javascript-plain colored"></i>
                <span>JavaScript</span>
              </li>
              <li class="skills-card">
                <i class="devicon-typescript-plain colored"></i>
                <span>TypeScript</span>
              </li>
              <li class="skills-card">
                <i class="devicon-react-original colored"></i>
                <span>React</span>
              </li>
              <li class="skills-card">
                <i class="devicon-vuejs-plain colored"></i>
                <span>Vue</span>
              </li>
              <li class="skills-card">
                <i class="devicon-nextjs-plain colored"></i>
                <span>Next.js</span>
              </li>
              <li class="skills-card">
                <i class="devicon-astro-plain colored"></i>
                <span>Astro</span>
              </li>
              <li class="skills-card">
                <i class="devicon-nuxtjs-plain colored"></i>
                <span>Nuxt.js</span>
              </li>
              <li class="skills-card">
                <i class="devicon-html5-plain colored"></i>
                <span>HTML</span>
              </li>
              <li class="skills-card">
                <i class="devicon-css3-plain colored"></i>
                <span>CSS</span>
              </li>
              <li class="skills-card">
                <i class="devicon-tailwindcss-plain colored"></i>
                <span>Tailwind CSS</span>
              </li>
            </ul>
          </section>
          <section
            class="skills-category-card"
            data-animate-child
          >
            <h3 class="skills-category-title">バックエンド</h3>
            <ul class="skills-category-grid">
              <li class="skills-card">
                <i class="devicon-nodejs-plain colored"></i>
                <span>Node.js</span>
              </li>
              <li class="skills-card">
                <i class="devicon-php-plain colored"></i>
                <span>PHP</span>
              </li>
              <li class="skills-card">
                <i class="devicon-laravel-plain colored"></i>
                <span>Laravel</span>
              </li>
              <li class="skills-card">
                <i class="devicon-mysql-original colored"></i>
                <span>MySQL</span>
              </li>
            </ul>
          </section>
          <section
            class="skills-category-card"
            data-animate-child
          >
            <h3 class="skills-category-title">インフラ</h3>
            <ul class="skills-category-grid">
              <li class="skills-card">
                <i class="devicon-apache-plain colored"></i>
                <span>Apache</span>
              </li>
              <li class="skills-card">
                <i class="devicon-nginx-original colored"></i>
                <span>nginx</span>
              </li>
              <li class="skills-card">
                <i class="devicon-docker-plain colored"></i>
                <span>Docker</span>
              </li>
              <li class="skills-card">
                <i class="devicon-git-plain colored"></i>
                <span>Git</span>
              </li>
            </ul>
          </section>
          <section
            class="skills-category-card"
            data-animate-child
          >
            <h3 class="skills-category-title">デザイン</h3>
            <ul class="skills-category-grid">
              <li class="skills-card">
                <i class="devicon-figma-plain colored"></i>
                <span>Figma</span>
              </li>
              <li class="skills-card">
                <i class="devicon-xd-plain colored"></i>
                <span>Adobe XD</span>
              </li>
              <li class="skills-card">
                <i class="devicon-illustrator-plain colored"></i>
                <span>Adobe Illustrator</span>
              </li>
            </ul>
          </section>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .skills-panel {
    position: relative;
  }

  .skills-pattern {
    position: absolute;
    inset: 0;
    background-image: linear-gradient(
        to right,
        color-mix(in srgb, var(--surface-outline) 36%, transparent) 1px,
        transparent 1px
      ),
      linear-gradient(
        to bottom,
        color-mix(in srgb, var(--surface-outline) 36%, transparent) 1px,
        transparent 1px
      );
    background-size: 60px 60px;
    opacity: 0.45;
    pointer-events: none;
    z-index: 0;
  }

  .skills-highlight {
    position: absolute;
    width: 320px;
    height: 320px;
    bottom: -160px;
    left: -140px;
    background: radial-gradient(
      circle,
      color-mix(in srgb, var(--brand-primary) 38%, transparent) 0%,
      transparent 70%
    );
    pointer-events: none;
    z-index: 0;
  }

  .skills-panel > .grid,
  .skills-panel > .grid * {
    position: relative;
    z-index: 1;
  }

  .skills-categories {
    display: grid;
    gap: 0.75rem;
    grid-template-columns: 1fr;
    align-items: stretch;
  }

  @media (min-width: 768px) {
    .skills-categories {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  .skills-category-card {
    display: flex;
    flex-direction: column;
    gap: 0.9rem;
    padding: 1.4rem 1.2rem;
    border-radius: 20px;
    border: 1px solid color-mix(in srgb, var(--surface-outline) 70%, transparent);
    background: color-mix(in srgb, var(--surface-base) 98%, transparent);
    box-shadow: 0 12px 28px rgba(12, 18, 32, 0.05);
    transition:
      transform 0.35s ease,
      border-color 0.35s ease,
      box-shadow 0.35s ease;
  }

  .skills-category-card:hover {
    transform: translateY(-4px);
    border-color: color-mix(in srgb, var(--brand-primary) 52%, var(--surface-outline));
    box-shadow: var(--shadow-accent);
  }

  .skills-category-title {
    margin: 0;
    font-size: 1.05rem;
    font-weight: 700;
    color: var(--ink-strong);
    letter-spacing: 0.04em;
  }

  .skills-category-grid {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 0.65rem;
  }

  .skills-card {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    gap: 0.6rem;
    padding: 0.85rem 0.95rem;
    border-radius: 14px;
    border: 1px solid color-mix(in srgb, var(--surface-outline) 65%, transparent);
    background: color-mix(in srgb, var(--surface-base) 99%, transparent);
    box-shadow: 0 10px 18px rgba(12, 18, 32, 0.04);
    transition:
      transform 0.3s ease,
      border-color 0.3s ease,
      box-shadow 0.3s ease;
  }

  .skills-card:hover {
    transform: translateY(-4px);
    border-color: color-mix(in srgb, var(--brand-primary) 48%, var(--surface-outline));
    box-shadow: 0 20px 44px rgba(24, 32, 54, 0.12);
  }

  .skills-card span {
    font-size: 0.96rem;
    font-weight: 600;
    color: var(--ink-strong);
  }

  .skills-card i {
    font-size: 2.1rem;
  }

  .skills-media {
    display: flex;
    justify-content: center;
  }

  .skills-media-frame {
    position: relative;
    width: min(100%, 440px);
    padding: 1.6rem;
    border-radius: 28px;
    border: 1px solid color-mix(in srgb, var(--surface-outline) 72%, transparent);
    background: color-mix(in srgb, var(--surface-base) 98%, transparent);
    box-shadow: 0 30px 90px rgba(8, 12, 24, 0.12);
  }

  .media-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 420px;
    border-radius: 24px;
    background: color-mix(in srgb, var(--brand-primary-soft) 50%, var(--surface-base));
    color: var(--brand-primary-dark);
    font-size: 1.2rem;
    font-weight: 600;
  }

  @media (max-width: 1024px) {
    .skills-wrapper {
      padding-block: 2.5rem;
    }

    .skills-panel {
      border-radius: 28px;
    }

    .skills-media-frame {
      padding: 1.4rem;
    }

    .media-placeholder {
      height: 300px;
    }
  }

  @media (max-width: 640px) {
    .skills-wrapper {
      padding-inline: 1rem;
    }

    .skills-panel {
      border-radius: 22px;
    }

    .skills-panel > .flex {
      padding: 2.1rem 1.5rem;
      gap: 2.2rem;
      align-items: center;
    }

    .skills-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1.4rem;
      text-align: center;
    }

    .skills-content > span {
      justify-content: center;
      margin: 0 auto;
    }

    .skills-categories {
      width: 100%;
      gap: 0.65rem;
    }

    .skills-category-card {
      padding: 1.2rem 1rem;
      gap: 0.8rem;
      border-radius: 16px;
    }

    .skills-category-title {
      font-size: 1rem;
    }

    .skills-category-grid {
      gap: 0.6rem;
    }

    .skills-card {
      padding: 0.85rem 0.75rem;
      gap: 0.55rem;
      border-radius: 14px;
    }

    .skills-card span {
      font-size: 0.92rem;
    }

    .skills-card i {
      font-size: 1.8rem;
    }

    .skills-media-frame {
      padding: 1.1rem;
    }

    .media-placeholder {
      height: 260px;
      border-radius: 20px;
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .skills-panel > .flex {
      padding: 1.9rem 1.15rem;
      gap: 2rem;
    }

    .skills-category-card {
      padding: 1.05rem 0.85rem;
      border-radius: 14px;
    }

    .skills-category-grid {
      gap: 0.5rem;
    }

    .skills-card {
      padding: 0.75rem 0.6rem;
    }

    .skills-card i {
      font-size: 1.6rem;
    }
  }
</style>
